/* Quality Coach AI Widget Styles */

.quality-coach-section {
    margin: 4rem auto 3rem;
    padding: 0;
    max-width: 100%;
}

.quality-coach-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border-radius: 12px 12px 0 0;
    border: 1px solid #0ea5e9;
    border-bottom: none;
}

.quality-coach-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.quality-coach-icon svg {
    color: white;
}

.quality-coach-info {
    flex: 1;
}

.quality-coach-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0c4a6e;
    margin: 0 0 0.25rem 0;
}

.quality-coach-subtitle {
    font-size: 0.95rem;
    color: #475569;
    margin: 0;
}

.quality-coach-widget-container {
    border-radius: 0;
    overflow: hidden;
    border: 1px solid #e5e7eb;
    border-top: none;
    border-bottom: none;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    position: relative;
}

/* Chat Messages Area */
.qc-messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    min-height: 400px;
    max-height: 600px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.qc-welcome {
    text-align: center;
    color: #64748b;
    padding: 2rem;
    line-height: 1.6;
}

.qc-welcome p {
    margin: 0.5rem 0;
}

/* Message Bubbles */
.qc-message {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    animation: messageSlideIn 0.3s ease-out;
}

@keyframes messageSlideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.qc-message-user {
    align-items: flex-end;
}

.qc-message-assistant,
.qc-message-error {
    align-items: flex-start;
}

.qc-message-bubble {
    max-width: 80%;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    line-height: 1.5;
    word-wrap: break-word;
}

.qc-message-user .qc-message-bubble {
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
    color: white;
    border-bottom-right-radius: 0.25rem;
}

.qc-message-assistant .qc-message-bubble {
    background: #f1f5f9;
    color: #1e293b;
    border-bottom-left-radius: 0.25rem;
}

.qc-message-error .qc-message-bubble {
    background: #fee2e2;
    color: #991b1b;
    border-bottom-left-radius: 0.25rem;
}

/* Sources */
.qc-sources {
    font-size: 0.875rem;
    color: #64748b;
    padding: 0 1rem;
    max-width: 80%;
}

.qc-sources strong {
    color: #475569;
}

/* Typing Indicator */
.qc-typing {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    align-items: center;
}

.qc-typing-dot {
    width: 8px;
    height: 8px;
    background: #94a3b8;
    border-radius: 50%;
    animation: typingBounce 1.4s infinite;
}

.qc-typing-dot:nth-child(2) {
    animation-delay: 0.2s;
}

.qc-typing-dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typingBounce {
    0%, 60%, 100% {
        transform: translateY(0);
    }
    30% {
        transform: translateY(-10px);
    }
}

/* Input Area */
.qc-input-container {
    display: flex;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-top: 1px solid #e5e7eb;
    background: #f8fafc;
    align-items: flex-end;
}

.qc-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid #cbd5e1;
    border-radius: 0.75rem;
    font-size: 1rem;
    font-family: inherit;
    resize: none;
    min-height: 44px;
    max-height: 120px;
    transition: border-color 0.2s;
}

.qc-input:focus {
    outline: none;
    border-color: #0ea5e9;
    box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.qc-input:disabled {
    background: #f1f5f9;
    cursor: not-allowed;
}

.qc-send-button {
    flex-shrink: 0;
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
    color: white;
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s, opacity 0.2s;
}

.qc-send-button:hover:not(:disabled) {
    transform: translateY(-2px);
}

.qc-send-button:active:not(:disabled) {
    transform: translateY(0);
}

.qc-send-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.quality-coach-footer {
    padding: 1rem 1.5rem;
    background: #f8fafc;
    border-radius: 0 0 12px 12px;
    border: 1px solid #e5e7eb;
    border-top: none;
}

.quality-coach-note {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
    font-size: 0.875rem;
    color: #64748b;
}

.quality-coach-note svg {
    flex-shrink: 0;
    color: #94a3b8;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .quality-coach-section {
        margin: 2rem auto 2rem;
    }
    
    .quality-coach-header {
        padding: 1rem;
    }
    
    .quality-coach-icon {
        width: 40px;
        height: 40px;
    }
    
    .quality-coach-icon svg {
        width: 20px;
        height: 20px;
    }
    
    .quality-coach-title {
        font-size: 1.1rem;
    }
    
    .quality-coach-subtitle {
        font-size: 0.875rem;
    }
    
    .qc-messages {
        min-height: 300px;
        max-height: 400px;
        padding: 1rem;
    }
    
    .qc-welcome {
        padding: 1rem;
    }
    
    .qc-message-bubble {
        max-width: 90%;
        font-size: 0.9375rem;
    }
    
    .qc-input-container {
        padding: 0.75rem;
    }
    
    .quality-coach-footer {
        padding: 0.75rem 1rem;
    }
    
    .quality-coach-note {
        font-size: 0.8rem;
        flex-wrap: wrap;
    }
}

/* Dark mode support (if theme has dark mode) */
@media (prefers-color-scheme: dark) {
    .quality-coach-header {
        background: linear-gradient(135deg, #0c4a6e 0%, #075985 100%);
    }
    
    .quality-coach-title {
        color: #e0f2fe;
    }
    
    .quality-coach-subtitle {
        color: #cbd5e1;
    }
    
    .quality-coach-widget-container {
        border-color: #334155;
    }
    
    .quality-coach-footer {
        background: #1e293b;
        border-color: #334155;
    }
    
    .quality-coach-note {
        color: #94a3b8;
    }
}

/* Print styles - hide widget when printing */
@media print {
    .quality-coach-section {
        display: none;
    }
}
