{{!< default}}

{{#post}}
<main class="gh-main">
    <article class="gh-article {{post_class}}">

        <header class="gh-article-header gh-canvas">
            {{#if primary_tag}}
                <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
            {{/if}}

            <h1 class="gh-article-title">{{title}}</h1>

            {{> "post-meta"}}

            {{#if custom_excerpt}}
                <p class="gh-article-excerpt">{{custom_excerpt}}</p>
            {{/if}}

            {{> "feature-image"}}
        </header>

        {{!-- Paid subscribers get full content --}}
        {{#if @member.paid}}
            <section class="gh-content gh-canvas">
                {{{content}}}
            </section>
        {{else}}
            {{!-- Free members: show excerpt + custom paywall --}}
            {{!-- JS will check for per-article purchase and show full content if verified --}}
            <section class="gh-content gh-canvas">
                {{!-- Preview excerpt --}}
                <div class="gh-excerpt-wrapper">
                    {{excerpt words="300"}}
                </div>
                
                {{!-- Custom paywall (hidden by JS if member purchased) --}}
                {{> "paywall"}}
                
                {{!-- Full content (hidden by default, shown by JS if purchased) --}}
                {{!-- Ghost's injected paywall will be removed by JS --}}
                <div class="gh-full-content" style="display: none;">
                    {{{content}}}
                </div>
            </section>
        {{/if}}        <section>{{> "comments"}}</section>
    </article>
{{/post}}

{{> "related-posts"}}

</main>
